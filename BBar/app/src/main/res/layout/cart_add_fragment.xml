<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="27dp"
    android:layout_marginRight="27dp"
    android:layout_marginBottom="156dp"
    android:layout_marginTop="153dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="쇼핑리스트 직접 추가"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="247dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="154dp"
        android:textSize="18sp"
        android:textColor="#ffffff" />
    <TextView
        android:id="@+id/cart_item_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="재료 이름"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="85dp"
        android:layout_marginBottom="199dp"
        android:layout_marginLeft="25.5dp"
        android:layout_marginRight="257.5dp"
        android:textColor="#ffffff"/>
    <EditText
        android:id="@+id/cart_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cart_item_name_title"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:backgroundTint="#cc6cff"
        android:maxLength="10"/>

    <TextView
        android:id="@+id/cart_item_number_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="재료 개수"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="154dp"
        android:layout_marginBottom="130dp"
        android:layout_marginLeft="25.5dp"
        android:layout_marginRight="257.5dp"
        android:textColor="#ffffff" />
    <EditText
        android:id="@+id/cart_item_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cart_item_number_title"
        android:inputType="number"
        android:textColor="#ffffff"
        android:backgroundTint="#cc6cff"
        android:maxLength="10"/>

</androidx.constraintlayout.widget.ConstraintLayout>