<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#161221">
    <CheckBox
        android:id="@+id/cartItemSelect"
        android:background="@drawable/custom_checkbox"
        android:checked="false"
        android:button="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf= "parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="324dp"/>
    <TextView
        android:textColor="#ffffff"
        android:id="@+id/cartItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/cartItemSelect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="14.5dp"
        android:layout_marginRight="262.5dp"
        android:textSize="16sp"
        tools:text = "Name"/>

    <TextView
        android:textColor="#ffffff"
        android:id="@+id/cartItemNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="288dp"
        android:layout_marginRight="63dp"
        android:textSize="16sp"
        android:gravity="center"
        tools:text = "Number"/>
    <ImageButton
        android:src="@drawable/ic_action_shopping_list_plus"
        android:background="#00000000"
        android:id="@+id/cartItemPlusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cartItemNumber"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="31dp"/>
    <ImageButton
        android:src="@drawable/ic_action_shopping_list_minus"
        android:background="#00000000"
        android:id="@+id/cartItemMinusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/cartItemNumber"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>